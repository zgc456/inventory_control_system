<!-- 商品规格关系表 -->
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhkj.inventory_control_dao.mapper.SpecificationRelationMapper">
    <!-- 增加商品规格关系 -->
    <insert id="insertSpecificationRelation">
    insert into inventory_control.specificationrelation (specificationSku, commodityId) values (#{SpecificationrelationEntity.specificationSku},#{SpecificationrelationEntity.commodityId});
    </insert>
    <!-- 删除商品规格关系 -->
    <delete id="deleteSpecificationRelation">
    delete from inventory_control.specificationrelation where id=#{id}
    </delete>
    <!-- 修改商品规格关系 -->
    <update id="updateSpecificationRelation">
    update inventory_control.specificationrelation set specificationSku = #{SpecificationrelationEntity.specificationSku} where id=#{SpecificationrelationEntity.id};
    </update>
    <!-- 查询商品规格关系 -->
    <select id="getSpecificationRelation" resultType="com.zhkj.inventory_control_dao.entity.SpecificationrelationEntity">
    select * from inventory_control.specificationrelation;
    </select>
</mapper>